colorscheme evening

set number
set encoding=utf-8
set ttyfast
set vb t_vb=
set clipboard=unnamed,autoselect
set backupdir=~/AppData/Local/Temp
set directory=~/AppData/Local/Temp
set undodir=~/AppData/Local/Temp
set viminfo+=n~/AppData/Local/Temp

let mapleader = ','
nnoremap <silent> <Leader>vrc :<C-u>edit $MYGVIMRC<CR>
nnoremap <Leader>v :<C-u>vsp<CR>
nnoremap sn :<C-u>bn<CR>
nnoremap sp :<C-u>bp<CR>
nnoremap <CR> o<Esc>
