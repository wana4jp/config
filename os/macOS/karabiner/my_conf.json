{
  "title": "My Config",
  "rules": [
    {
      "description": "1. Capslock To Control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ]
        }
      ]
    },
    {
      "description": "2. Don't quit App when pressing LCommand + q",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "q"
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": [
                "^com.apple.Terminal$",
                "^com.evernote.Evernote$",
                "^com.google.Chrome$",
                "^com.zive.kiwi$",
                "^com.tinyspeck.slackmacgap$"
              ],
              "type": "frontmost_application_if"
            }
          ]
        }
      ]
    },
    {
      "description": "3. IME off when escape from insert mode",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^co.zeit.hyper$",
                "^com.apple.Terminal$",
                "^com.google.android.studio$",
                "^com.googlecode.iterm2$",
                "^com.jetbrains.",
                "^com.maisin.boost$",
                "^com.microsoft.VSCode$",
                "^org.vim."
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^co.zeit.hyper$",
                "^com.apple.Terminal$",
                "^com.google.android.studio$",
                "^com.googlecode.iterm2$",
                "^com.jetbrains.",
                "^com.maisin.boost$",
                "^com.microsoft.VSCode$",
                "^org.vim."
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^co.zeit.hyper$",
                "^com.apple.Terminal$",
                "^com.google.android.studio$",
                "^com.googlecode.iterm2$",
                "^com.jetbrains.",
                "^com.maisin.boost$",
                "^com.microsoft.VSCode$",
                "^org.vim."
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            },
            {
              "key_code": "c",
              "modifiers": [ "left_control" ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "4. Left Control + o => Toggle IME",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "^com\\.apple\\.inputmethod\\.Kotoeri\\.Japanese$"
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                { "language": "en" }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "^com\\.apple\\.inputmethod\\.Kotoeri\\.Roman$"
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                { "language": "ja" }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "5. Consumer Key Configs For UHK",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f18"
          },
          "to": [
            {
              "key_code": "mission_control"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f19"
          },
          "to": [
            {
              "key_code": "launchpad"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f20"
          },
          "to": [
            {
              "key_code": "illumination_decrement"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f21"
          },
          "to": [
            {
              "key_code": "illumination_increment"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f22"
          },
          "to": [
            {
              "key_code": "rewind"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f23"
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f24"
          },
          "to": [
            {
              "key_code": "fastforward"
            }
          ]
        }
      ]
    },
    {
      "description": "6. Disable Ctrl + space",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ]
        }
      ]
    }
  ]
}
